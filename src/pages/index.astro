---
import Layout from '../layouts/Layout.astro';
import siteSettings from '../config/site_settings.json';

// --- KOMPONENSEK IMPORTÁLÁSA ---
import HeroVideo from '../components/sections/HeroVideo.astro';
// Ha létezik a Hero.astro, vedd ki a kommentet, különben hiba lesz!
// import Hero from '../components/sections/Hero.astro'; 

import Features from '../components/sections/Features.astro';
import StoryScroll from '../components/sections/StoryScroll.astro'; // <--- MOST MÁR LÁTHATÓ LESZ
import Contact from '../components/sections/Contact.astro';
import Footer from '../components/sections/Footer.astro';

// --- LOGIKA (FONTOS: Ez is a kerítésen BELÜL van!) ---
const modules = siteSettings.modules || {};
---

<Layout title="Kezdőlap">
	<main>

        {
            modules.hero_type === 'video' 
            ? <HeroVideo /> 
            : <HeroVideo /> /* Ideiglenesen ide is a videót tettem, hogy ne omoljon össze, ha nincs Hero.astro fájlod */
        }

        {modules.show_features && <Features />}
        
        {modules.show_story && <StoryScroll />}
        
        <Contact /> 

	</main>

    <Footer />

</Layout>