---
// --- 1. RÉSZ: IMPORTOK ---
import siteSettings from '../config/site_settings.json';
import theme from '../config/theme.json';
// Itt húzzuk be az új Navbárt:
import Navbar from '../components/sections/Navbar.astro';
// Ha létrehoztad a global.css-t, azt is itt érdemes behúzni (opcionális):
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = siteSettings.brand.name } = Astro.props;
---

<!doctype html>
<html lang="hu" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content={siteSettings.brand.description} />
		
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href={theme.fonts.google_fonts_url} rel="stylesheet">

		<title>{title} | {siteSettings.brand.slogan}</title>

        <style define:vars={{ 
            'color-primary': theme.colors.primary,
            'color-secondary': theme.colors.secondary,
            'color-accent': theme.colors.accent,
            'color-bg': theme.colors.background,
            'color-text': theme.colors.text,
            'font-heading': theme.fonts.heading,
            'font-body': theme.fonts.body,
            'ui-radius': theme.ui.border_radius
        }}>
            :root {
                --primary: var(--color-primary);
                --secondary: var(--color-secondary);
                --bg: var(--color-bg);
                --text: var(--color-text);
            }
            
            body {
                font-family: var(--font-body);
                background-color: var(--bg);
                color: var(--text);
                overflow-x: hidden;
            }

            h1, h2, h3, h4, h5, h6 {
                font-family: var(--font-heading);
            }
        </style>
	</head>
	<body>
        <Navbar />

        <slot />
        
	</body>
</html>