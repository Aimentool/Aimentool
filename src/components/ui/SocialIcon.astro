---
interface Props {
  name: string;
  class?: string;
}

const { name, class: className = '' } = Astro.props;
---

{ name === 'facebook' && (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class={`w-5 h-5 ${className}`}>
    <path d="M17 2h-3a5 5 0 00-5 5v3H7v4h2v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z" />
  </svg>
)}

{ name === 'instagram' && (
  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class={`w-5 h-5 ${className}`}>
    <rect x="3" y="3" width="18" height="18" rx="5" />
    <circle cx="12" cy="12" r="4" />
    <circle cx="17.5" cy="6.5" r="1" />
  </svg>
)}

{ name === 'linkedin' && (
